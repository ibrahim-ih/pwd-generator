{
  "name": "pwd-generator",
  "version": "1.0.3",
  "description": "A JavaScript library for generating random passwords.",
  "main": "index.js",
  "scripts": {
    "build": "rimraf ./build && tsc",
    "start:dev": "npx nodemon",
    "start": "npm run build && node build/index.js",
    "lint": "eslint . --ext .ts",
    "prettier-format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,html,css,md}\"",
    "test": "jest",
    "test:dev": "jest --watchAll"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier-format && npm run lint",
      "pre-push": "npm run test && npm run prettier-format && npm run lint"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ibrahim-ih/pwd-generator.git"
  },
  "keywords": [
    "random",
    "password",
    "generator"
  ],
  "author": "Ibrahim Haouari",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ibrahim-ih/pwd-generator/issues"
  },
  "homepage": "https://github.com/ibrahim-ih/pwd-generator#readme",
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3",
    "rimraf": "^4.4.1"
  }
}
